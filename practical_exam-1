/*********************************************** 6th program ***********************************************/

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>JSON Display</h1>
    <table id="json-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>authors</th>
                <th>Price</th>
                <th>publish_date</th>
	<th>title_</th>
            </tr>
        </thead>
        <tbody>
    </table>

    <script>
        const jsonString = `
            [
                {
                    "id": 101,
                    "authors": "Grambell, Matthew",
                    "price": 650,
                    "publish_date": "2000-10-01",
	    "title_": "book1"
                },
               {
                    "id": 102,
                    "authors": "Rails, Kim",
                    "price": 225,
                    "publish_date": "2000-12-16",
	    "title_": "book2"
                }
            ]
        `;

        const jsonData = JSON.parse(jsonString);
        const tableBody = document.querySelector('#json-table tbody');

        jsonData.forEach(item => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${item.id}</td>
                <td>${item.authors}</td>
                <td>${item.price}</td>
                <td>${item.publish_date}</td>
	<td>${item.title_}</td>
            `;
            tableBody.appendChild(row);
        });
    </script>
</body>
</html>
